---
import { Icon } from 'astro-icon/components';
import { techData } from '../data/techData';
import '../styles/icons.css';

const groupedTechs = techData.reduce((acc, tech) => {
    acc[tech.category] = acc[tech.category] || [];
    acc[tech.category].push(tech);
    return acc;
}, {});
---

<div class="w-full min-h-screen bg-black border-white border-[1rem] rounded-4xl mt-20 px-5 py-10" id="about">
    <h3 class="text-5xl font-extrabold text-center mt-5 text-outline">About me</h3>
    <p class="text-center">
        <span class="font-medium">Software Engineering Student</span> & <span class="font-medium">Web Developer</span>
    </p>

    <div class="mx-auto max-w-5xl"> 
        {
            Object.entries(groupedTechs).map(([category, techs]) => (
                <div key={category} class="mt-10">
                    <h4 class="text-xl my-5 text-center">{category}</h4>
                    <div class="flex flex-wrap justify-center gap-8">
                        {techs.map((tech) => (
                            <Icon name={tech.name} class={tech.class} />
                        ))}
                    </div>
                </div>
            ))
        }
    </div>
</div>
